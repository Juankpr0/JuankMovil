<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="8dp"
                                   card_view:cardCornerRadius="16dp"
                                   card_view:cardElevation="6dp"
                                   android:foreground="?attr/selectableItemBackground">
	
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="16dp"
			android:gravity="center">
		
		<TextView
				android:id="@+id/txtNombreUsuario"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Nombre del usuario"
				android:textColor="#2C3E50"
				android:textSize="18sp"
				android:textStyle="bold"
				android:gravity="center" />
		
		<TextView
				android:id="@+id/txtEmailUsuario"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:text="email@ejemplo.com"
				android:textColor="#7F8C8D"
				android:textSize="14sp"
				android:gravity="center" />
		
		<TextView
				android:id="@+id/txtRolUsuario"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="6dp"
				android:text="Rol: USER"
				android:textColor="#2980B9"
				android:textSize="14sp"
				android:gravity="center" />
		
		<TextView
				android:id="@+id/txtActivoUsuario"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="6dp"
				android:text="Activo"
				android:textColor="#27AE60"
				android:textSize="14sp"
				android:gravity="center" />
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="12dp"
				android:orientation="horizontal"
				android:gravity="center">
			
			<Button
					android:id="@+id/btnEditarUsuario"
					style="@style/SecondaryButton"
					android:text="Editar"
					android:layout_marginEnd="8dp" />
			
			<Button
					android:id="@+id/btnEliminarUsuario"
					style="@style/DangerButton"
					android:text="Eliminar" />
		
		</LinearLayout>
	
	</LinearLayout>
</androidx.cardview.widget.CardView>
