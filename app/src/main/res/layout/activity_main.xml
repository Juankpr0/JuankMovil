<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="16dp"
		android:background="@android:color/white">
	
	<TextView
			android:id="@+id/tvDashboard"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SOX NEW"
			android:textSize="26sp"
			android:textStyle="bold"
			android:textColor="@android:color/black"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>
	
	<androidx.cardview.widget.CardView
			android:id="@+id/cardUsuarios"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="24dp"
			app:cardCornerRadius="12dp"
			app:cardElevation="6dp"
			app:layout_constraintTop_toBottomOf="@id/tvDashboard"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@id/cardCategorias">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:padding="16dp">
			
			<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Usuarios"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@android:color/black"/>
			
			<Button
					android:id="@+id/btnUsuarios"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Ir"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
	
	<androidx.cardview.widget.CardView
			android:id="@+id/cardCategorias"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="16dp"
			app:cardCornerRadius="12dp"
			app:cardElevation="6dp"
			app:layout_constraintTop_toBottomOf="@id/cardUsuarios"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@id/cardProductos">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:padding="16dp">
			
			<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="CategorÃ­as"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@android:color/black"/>
			
			<Button
					android:id="@+id/btnCategorias"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Ir"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
	
	<androidx.cardview.widget.CardView
			android:id="@+id/cardProductos"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp"
			app:cardCornerRadius="12dp"
			app:cardElevation="6dp"
			app:layout_constraintTop_toBottomOf="@id/cardCategorias"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:padding="16dp">
			
			<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Productos"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="@android:color/black"/>
			
			<Button
					android:id="@+id/btnProductos"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Ir"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
